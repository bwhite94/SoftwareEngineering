
@{
    var HuntName = "<<HUNT NAME>>";
    var HuntID = Request.RequestContext.RouteData.Values["id"];

    ViewBag.Title = HuntName;
}

<div class="row">
    <div class="md-col-12 col-sm-12 col-xs-12">

        <h3>Your Hunt Progress</h3>
        <em>How much progress have you made?</em>
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 10%;">
                10%
                <span class="sr-only">60% Complete</span>
            </div>
        </div>
        @*
            Show progress bar of hunt for:
            * FFA
            * Sequential or nah?
        *@

        <h3>Treasure(s)</h3>

        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <p>Treasure 1</p>
                <img src="http://placehold.it/250x250" />
            </div>
            <hr class="visible-sm-block visible-xs-block" />
            <div class="col-md-6 col-sm-12 col-xs-12">
                <p>Treasure 2</p>
                <img src="http://placehold.it/250x250" />
            </div>
        </div>

        @*
            If FFA show full list of treasures
            If sequential, show next in list
        *@


    </div>
</div>