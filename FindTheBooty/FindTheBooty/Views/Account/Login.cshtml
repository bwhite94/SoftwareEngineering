@using FindTheBooty.Models
@model LoginViewModel
@{
    ViewBag.Title = "Check Yer Booty!";
}
<div class="row">
    <div class="col-md-offset-2 col-sm-offset-2 col-md-8 col-sm-8">
        <div style="width: 100%; margin-bottom: 2em;"><img class="center-block img-rounded" style="width:150px; height:auto;" src="~/Content/Images/parrot logo.png" /></div>
        <div style="width:100%;">
            <h2 class="center-block kaushanScript">Check Yer Booty!</h2>
        </div>
        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                @*<label for="">Email Address</label>
                    <input class="form-control" id="userEmail" placeholder="Email"></input>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                @*<label for="">Password</label>
                    <input type="password" class="form-control" id="userPassword" placeholder="Password"></input>*@
            </div>
            <div class="form-group">
                <div class="col-xs-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg outline kaushanScript">Login</button>
                    <button type="reset" class="btn btn-primary btn-lg outline kaushanScript">Clear Form</button>
                </div>
            </div>
            <div style="margin-top: 75px;">
                <h4>Don't have an account?</h4>
                @Html.ActionLink("Sign Up Today!", "Register")
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}