@model IEnumerable<FindTheBooty.Models.GeneratedModels.user>

@{
    ViewBag.Title = "Leaderboard";
}

<h2>Leaderboard</h2>
<h4><i>The most feared pirates on the seas!</i></h4>

<div style="margin-top: 1em;">
    <a href="/Leaderboard/Rank" class="btn btn-success">Famous Pirates</a>
    <a href="/Leaderboard/Points" class="btn btn-default">Gold Claimed</a><!-- Button that sorts based on the gold claimed -->
    <a href="/Leaderboard/Hunts" class="btn btn-default">Seas Pillaged</a><!-- Button that sorts based on the the number of hunts the user is in -->
    <a href="/Leaderboard/Treasures" class="btn btn-default">Booty Collection</a><!-- Button that sorts based on the number of treasures the user found -->
</div>

<br />

<table class="table"><!-- Creates the table for the leaderboard data to be stored -->
    <tr>
        <th>Pirate</th>
        <th>Rank</th>
        <th>Gold Pieces</th>
        <th>Hunts Mastered</th>
        <th>Booty Claimed</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr><!-- For each user in the model, display their information -->
            <td>@Html.DisplayFor(modelItem => item.display_name)</td>
            <td>@Html.DisplayFor(modelItem => item.rank)</td>
            <td>@Html.DisplayFor(modelItem => item.points)</td>
            <td>@Html.DisplayFor(modelItem => item.num_hunts)</td>
            <td>@Html.DisplayFor(modelItem => item.num_treasures)</td>
        </tr>
    }

</table>